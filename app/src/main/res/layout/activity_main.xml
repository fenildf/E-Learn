<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            ></android.support.v7.widget.Toolbar>


        <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_widthPercent="7%"
            app:layout_heightPercent="5%"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_signIn"
            android:background="@drawable/circle"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="32%"
            app:layout_heightPercent="20%"
            />

        <Button
            android:background="@drawable/calendar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_widthPercent="7%"
            app:layout_heightPercent="5.5%"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="42%"
            android:id="@+id/button_calendar" />
        <Button
            android:text="签到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:layout_below="@+id/button_calendar"/>




        <Button
            android:id="@+id/button_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            app:layout_widthPercent="50%"
            app:layout_marginBottomPercent="15%"
            android:background="#000000"
            android:text="LEARN"
            android:textColor="#ffffff"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/button_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_widthPercent="50%"
            app:layout_marginBottomPercent="15%"
            android:text="REVIEW"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_weight="1"
            android:background="#000000"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="4dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            app:layout_marginBottomPercent="16.5%" />

        <Button
            android:id="@+id/Connect"
            android:background="@drawable/user_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="6%"
            />
        <ImageView
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="14.7%"/>

        <Button
            android:id="@+id/button_home"
            android:background="@drawable/home_2"
            android:layout_marginTop="25dp"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="6.2%"
            app:layout_marginLeftPercent="5%"
            app:layout_heightPercent="6%"
            />
        <TextView
            android:id="@+id/shouye"
            android:text="首页"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_home"
            app:layout_marginLeftPercent="6.8%"/>
        <Button
            android:id="@+id/map"
            android:background="@drawable/map_1"
            app:layout_marginTopPercent="6.2%"
            app:layout_widthPercent="10%"
            app:layout_marginLeftPercent="25%"
            app:layout_heightPercent="6%"
            />
        <TextView
            android:text="定位"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_home"
            app:layout_marginLeftPercent="26.8%"/>
        <Button
            android:id="@+id/scene"
            android:background="@drawable/scene_1"
            android:layout_marginTop="25dp"
            app:layout_marginTopPercent="6.2%"
            app:layout_widthPercent="10%"
            app:layout_marginLeftPercent="45%"
            app:layout_heightPercent="6%"
            />
        <TextView
            android:text="场景库"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_home"
            app:layout_marginLeftPercent="45.4%"/>
        <Button
            android:id="@+id/vedio"
            android:background="@drawable/vedio_1"
            android:layout_marginTop="25dp"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="6.2%"
            app:layout_marginLeftPercent="65%"
            app:layout_heightPercent="6%"
            />
        <TextView
            android:text="视频库"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_home"
            app:layout_marginLeftPercent="65.4%"/>
        <Button
            android:id="@+id/company"
            android:background="@drawable/company_1"
            android:layout_marginTop="25dp"
            app:layout_widthPercent="10%"
            app:layout_marginTopPercent="6.2%"
            app:layout_marginLeftPercent="85%"
            app:layout_heightPercent="6.3%"
            />
        <TextView
            android:text="语伴"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_home"
            app:layout_marginLeftPercent="86.8%"/>





    </android.support.percent.PercentRelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity='start'

        >

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>